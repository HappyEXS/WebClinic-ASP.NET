@model VisitModel

<div class="main-body">
    <table class="main-table">
        <thead class="main-head">
            <tr class="table-row">
                <th class="table-item">Patient's Name</th>
                <th class="table-item">Date</th>
                <th class="table-item">Day of the Week</th>
                <th class="table-item">Begins at</th>
            </tr>

        </thead>
        <tbody cite="visit-body">

            <tr class="table-row">
                <td class="table-item">@Model.Patient.Name @Model.Patient.Surname</td>
                <td class="table-item">@Model.getDate()</td>
                <td class="table-item">@Model.getDayOfTheWeek()</td>
                <td class="table-item">@Model.getStartHour()</td>
            </tr>
        </tbody>
    </table>
    <form id="editDescriptionForm" asp-controller="Doctor" asp-action="EditDescription" method="post">
        <input type="hidden" asp-for=VisitID />
        <input type="hidden" asp-for=ScheduleID />
        <input type="hidden" asp-for=PatientID />
        <input type="hidden" asp-for=StartTime />
        <input type="hidden" asp-for=Available />
        <table class="mt-4">
            <tr>
                <td class="table-item">
                    <textarea rows="15" cols="120" style="resize:none;"  form="editDescriptionForm" asp-for=Description> </textarea>
                </td>
                <td class="table-item">
                    <button type="submit" class="btn btn-primary">Save</button>
                </td>
                <td class="table-item">
                    <button type="button" class="btn btn-danger" onclick="window.location.href='/Doctor/Dashboard';">Cancel</button>
                </td>
            </tr>
        </table>
    </form>
  
</div>

@model ScheduleModel


<h1>Add new schedule</h1>

<hr />
<h5>Provide information about new schedule</h5>



<div class="form-body">
    <form asp-controller="Schedule" asp-action="Create" method="post">
        <div class="mb-3">
            <table>
                <tr class="tab-row">
                    <td class="table-item" style="margin-right: 100px;">
                        <label class="form-label">Doctor</label>
                    </td>
                    <td class="table-item">
                        <select asp-for=DoctorID class="form-control" />
                        @foreach (var doc in ViewBag.doctors)
                        {
                            @if (@doc.DoctorID == @Model.DoctorID)
                            {
                                <option value="@doc.SpecialityID" selected>@doc.Name @doc.Surname</option>
                            }
                            else
                            {
                                <option value="@doc.DoctorID">@doc.Name @doc.Surname</option>
                            }
                        }
                    </td>
                </tr>
            </table>
        </div>

        <div class="mb-3">
            <label class="form-label">StartTime</label>
            <input asp-for=StartTime type="datetime-local" step="900" value="@Model.StartTime.ToString("yyyy-MM-dd%THH:%0%0")" class="form-control" />
            <span asp-validation-for="StartTime" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label class="form-label">EndTime</label>
            <input asp-for=EndTime type="datetime-local" step="900" value="@Model.EndTime.ToString("yyyy-MM-dd%THH:%0%0")" class="form-control" />
            <span asp-validation-for="EndTime" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-secondary" onclick="window.location.href='/Schedule';">Go back</button>
        </div>
    </form>

</div>